<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.kuis.FirstLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Arema"
        android:textColor="#262626"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/Arema"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#262626"
        android:text="Fans Club"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Arema"
        android:id="@+id/fansClub" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="13dp"
        android:text="Sign in Or Sign up"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fansClub"
        android:id="@+id/signin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/btnTwiter"
        android:layout_below="@+id/signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
            <ImageView

                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/iconTwitter"
                android:src="@drawable/twitter"
                />
            <Button
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:background="#5A8ECA"
                android:textSize="13dp"
                android:textColor="#FFFF"
                android:text="Twitter"
                android:gravity="left|center_vertical"
                android:paddingLeft="30dp"
                android:id="@+id/twitter"
                 />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/btnLinkedIn"
        android:layout_below="@+id/btnFacebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
        <ImageView

            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/iconLinkedIn"
            android:src="@drawable/linkedin"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="#027BB9"
            android:textSize="13dp"
            android:textColor="#FFFF"
            android:text="LinkedIn"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:id="@+id/LinkedIn"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/btnFacebook"
        android:layout_below="@+id/btnTwiter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/iconFacenook"
            android:src="@drawable/facebook"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="#3B599C"
            android:textSize="13dp"
            android:textColor="#FFFF"
            android:text="Facebook"
            android:gravity="left|center_vertical"
            android:paddingLeft="30dp"
            android:id="@+id/facebook"
            />
    </LinearLayout>
</RelativeLayout>
